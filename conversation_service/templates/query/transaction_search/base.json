{
  "template_name": "transaction_search_base",
  "description": "Template de base pour recherche de transactions",
  "target_intention": "TRANSACTION_SEARCH.base",
  "parameters": {
    "user_id": "{{user_id}}",
    "filters": {
      "transaction_type": "{{transaction_type}}",
      "merchant_name": "{{ merchants if merchants else null }}",
      "category_name": "{{ categories if categories else null }}",
      "amount_abs": "{{amount}}",
      "date": "{{ date_range if date_range else null }}"
    },
    "sort": [
      {"date": {"order": "desc"}}
    ],
    "page_size": 50
  },
  "parameter_mappings": {
    "user_id": {
      "required": true,
      "type": "integer",
      "source": "context.user_id"
    },
    "transaction_type": {
      "required": false,
      "type": "string",
      "source": "entities.transaction_type",
      "allowed_values": ["debit", "credit"],
      "default": ""
    },
    "merchants": {
      "required": false,
      "type": "array",
      "source": "entities.merchants",
      "description": "Liste des marchands"
    },
    "categories": {
      "required": false,
      "type": "array",
      "source": "entities.categories",
      "description": "Liste des cat√©gories"
    },
    "amount": {
      "required": false,
      "type": "object",
      "source": "entities.montant"
    },
    "date_range": {
      "required": false,
      "type": "object",
      "source": "entities.date_range"
    }
  },
  "filter_cleanup": {
    "remove_null_values": true,
    "remove_empty_objects": true
  },
  "optimizations": {
    "cache_duration": "30m",
    "elasticsearch_routing": "user_id"
  }
}