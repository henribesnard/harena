{
  "template_name": "transaction_search_by_merchant",
  "description": "Recherche de transactions par marchand",
  "target_intention": "TRANSACTION_SEARCH.by_merchant",
  "parameters": {
    "user_id": "{{user_id}}",
    "query": "{{merchant_query}}",
    "filters": {
      "merchant_name": "{% if merchants %}{{merchants}}{% elif merchant_name %}{{merchant_name}}{% else %}null{% endif %}",
      "transaction_type": "{{transaction_type}}"
    },
    "sort": [
      {"date": {"order": "desc"}}
    ],
    "page_size": 50
  },
  "parameter_mappings": {
    "user_id": {
      "required": true,
      "type": "integer",
      "source": "context.user_id"
    },
    "merchant_query": {
      "required": false,
      "type": "string",
      "source": "entities.merchant_query",
      "default": ""
    },
    "merchants": {
      "required": false,
      "type": "array",
      "source": "entities.merchants",
      "description": "Liste des marchands (cas pluriel)"
    },
    "merchant_name": {
      "required": false,
      "type": "string",
      "source": "entities.merchant_name",
      "description": "Un seul marchand (cas singulier normalis√©)"
    },
    "transaction_type": {
      "required": false,
      "type": "string",
      "source": "entities.transaction_type",
      "allowed_values": ["debit", "credit"],
      "default": ""
    }
  },
  "parameter_selection": {
    "merchant_query_or_filter": {
      "logic": "if entities.merchant then use merchant_name filter else use merchant_query"
    }
  },
  "filter_cleanup": {
    "remove_null_values": true,
    "remove_empty_objects": true
  },
  "optimizations": {
    "cache_duration": "30m",
    "elasticsearch_routing": "user_id"
  }
}