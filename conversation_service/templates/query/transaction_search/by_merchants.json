{
  "template_name": "transaction_search_by_merchants",
  "description": "Recherche de transactions pour plusieurs marchands avec agrégations par marchand",
  "target_intention": "TRANSACTION_SEARCH.by_merchants",
  "parameters": {
    "user_id": "{{user_id}}",
    "filters": {
      "merchant_name": "{{ merchants if merchants else null }}",
      "transaction_type": "{{transaction_type}}"
    },
    "sort": [
      {"date": {"order": "desc"}}
    ],
    "page_size": 50
  },
  "parameter_mappings": {
    "user_id": {
      "required": true,
      "type": "integer",
      "source": "context.user_id"
    },
    "merchants": {
      "required": false,
      "type": "array",
      "source": "entities.merchants",
      "description": "Liste des marchands à filtrer"
    },
    "transaction_type": {
      "required": false,
      "type": "string",
      "source": "entities.transaction_type",
      "allowed_values": ["debit", "credit"],
      "default": ""
    }
  },
  "filter_cleanup": {
    "remove_null_values": true,
    "remove_empty_objects": true
  },
  "optimizations": {
    "cache_duration": "30m",
    "elasticsearch_routing": "user_id"
  }
}
