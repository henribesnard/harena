{
  "template_name": "transaction_search_simple",
  "description": "Template simple pour recherche de transactions",
  "target_intention": "TRANSACTION_SEARCH.simple",
  "parameters": {
    "user_id": "{{user_id}}",
    "query": "{% if query %}{{query}}{% else %}{% endif %}",
    "filters": {
      "transaction_type": "{{transaction_type}}"{% if merchants or merchant_name %},
      "merchant_name": "{% if merchants %}{{merchants}}{% else %}['{{merchant_name}}']{% endif %}"{% endif %}{% if categories %},
      "category_name": "{{ categories }}"{% endif %}{% if date_range %},
      "date": "{{ date_range }}"{% endif %}
    },
    "sort": [
      {"date": {"order": "desc"}}
    ],
    "page_size": 50
  },
  "parameter_mappings": {
    "user_id": {
      "required": true,
      "type": "integer",
      "source": "context.user_id"
    },
    "query": {
      "required": false,
      "type": "string",
      "source": "entities.query",
      "description": "Termes de recherche textuelle pour filtrer les transactions",
      "default": ""
    },
    "transaction_type": {
      "required": false,
      "type": "string",
      "source": "entities.transaction_type",
      "allowed_values": ["debit", "credit"],
      "default": ""
    },
    "merchant_name": {
      "required": false,
      "type": "string",
      "source": "entities.merchant_name",
      "description": "Marchand unique (normalisé depuis merchant)"
    },
    "merchants": {
      "required": false,
      "type": "array",
      "source": "entities.merchants",
      "description": "Liste des marchands (pluriel)"
    },
    "categories": {
      "required": false,
      "type": "array",
      "source": "entities.categories",
      "description": "Liste des catégories"
    },
    "date_range": {
      "required": false,
      "type": "object",
      "source": "entities.date_range",
      "description": "Plage de dates pour filtrer les transactions"
    }
  },
  "filter_cleanup": {
    "remove_null_values": true,
    "remove_empty_objects": true
  },
  "optimizations": {
    "cache_duration": "30m",
    "elasticsearch_routing": "user_id"
  }
}