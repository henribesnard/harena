# Dockerfile for Conversation Service V2 - Production (uses AWS resources)

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY conversation_service_v2/requirements.txt ./conversation_service_v2/
RUN pip install --no-cache-dir -r conversation_service_v2/requirements.txt

# Copy shared modules (same pattern as other services)
COPY config_service/ ./config_service/
COPY db_service/ ./db_service/

# Copy application code
COPY conversation_service_v2/app/ ./conversation_service_v2/app/
COPY conversation_service_v2/run.py ./conversation_service_v2/

# Copy .env file
COPY .env ./.env

# Set Python path
ENV PYTHONPATH=/app

# Expose port
EXPOSE 3007

# Run the application
CMD ["python", "-m", "uvicorn", "conversation_service_v2.app.main:app", "--host", "0.0.0.0", "--port", "3007"]
